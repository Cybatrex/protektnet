<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="search_template_currency">
        <a class="dropdown-toggle" data-toggle="dropdown" type="button">
            <span class="fa fa-money"/>Currency:
            
            <t t-set="journal_value" t-value="'All'"/>
            <t t-as="j" t-foreach="options['journals']">
                <t t-if="j.get('selected') == True">
                    <t t-set="journal_value" t-value="''"/>
                    <t t-esc="j.get('code')"/></t>
            </t>
            <t t-esc="journal_value"/>
            <span class="caret"/>
        </a>
        <ul class="dropdown-menu o_filters_menu" role="menu">
            <t t-as="j" t-foreach="options['journals']">
                <t t-if="j.get('id') == 'divider'">
                    <li class="divider"/>
                    <li>
                        <b style="margin-left: 5px;">
                            <t t-esc="j.get('name')"/>
                        </b>
                    </li>
                    <li class="divider"/>
                </t>
                <t t-if="j.get('id') != 'divider'">
                    <li class="js_account_report_choice_filter" data-filter="journals" t-att-data-id="j.get('id')" t-att-title="j.get('name')+ '-' + j.get('code')">
                        <a>
                            <t t-esc="j.get('name')"/>
                        </a>
                    </li>
                </t>
            </t>
        </ul>
    </template>
    <template id="search_template" inherit_id="account_reports.search_template" name="account reports multicurrency">
        <xpath expr="." position="inside">
            <div class="btn-group o_dropdown o_account_reports_filter_journals">
                <t t-call="account_reports_multicurrency.search_template_currency"/>
            </div>
        </xpath>
    </template>
</odoo>